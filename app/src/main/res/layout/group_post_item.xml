<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/otherProfile"
        android:layout_width="52dp"
        android:layout_height="46dp"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="250dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivProfilePicPost"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/blank_profile" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvPostAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="Jane"
        app:layout_constraintStart_toEndOf="@+id/otherProfile"
        app:layout_constraintTop_toBottomOf="@+id/tvGroupNamePost" />

    <TextView
        android:id="@+id/tvGroupNamePost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Lawnmowing"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/tvPostAuthor"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Â·"
        app:layout_constraintStart_toEndOf="@+id/tvPostAuthor"
        app:layout_constraintTop_toTopOf="@+id/tvPostAuthor" />

    <TextView
        android:id="@+id/tvGroupPostTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="2h"
        android:textStyle="italic"
        app:layout_constraintStart_toEndOf="@+id/textView14"
        app:layout_constraintTop_toBottomOf="@+id/tvGroupNamePost" />

    <TextView
        android:id="@+id/tvGroupPostDes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"
        android:text="Hi everyone! I just joined this group. I have a lot of experience mowing lawns (~10 years). Feel free to contact me if you need your lawn mowed ASAP!"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/otherProfile" />

</androidx.constraintlayout.widget.ConstraintLayout>